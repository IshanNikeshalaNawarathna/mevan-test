pipeline {
    agent any   // Runs on any available agent

    stages {
        stage('Build') {
            steps {
              echo "build the application"
            }
        }

        stage('Test') {
            steps {
              echo "test the application"
            }
        }

        stage('Deploy') {
            steps {
               echo "deploy the application"
            }
        }
    }

}

